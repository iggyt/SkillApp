
    <Dialog xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:comm="sap.ui.commons"
        title="Sort Options" >
        <content>
            <RadioButton groupName="ascension" text="Ascending" select="handleSelectAsc" />
            <RadioButton groupName="ascension" text="Descending" select="handleSelectAsc" />
            <comm:HorizontalDivider></comm:HorizontalDivider>
            <VBox items="{/TOPICS}">
                <RadioButton groupName="characteristic" text="{NAME}" select="handleSelectChar" />

            </VBox>
        </content>
        <beginButton>
            <Button text="Select" press="onDialogSelectButton"></Button>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onDialogCancelButton"></Button>
        </endButton>
    </Dialog>
